<?php 
    $first = 2;
    $second = 5;
    $sum = sprintf("%.2f",$first + $second);
    echo '$first + $second = ' . "$first + $second = " . $sum . "<br>\n";
    
    $first = 1.567808;
    $second = 0.356;
    $sum = sprintf("%.2f",$first + $second);
    echo '$first + $second = ' . "$first + $second = " . $sum . "<br>\n";
    
    $first = 1234.5678;
    $second = 333;
    $sum = sprintf("%.2f",$first + $second);
    echo '$first + $second = ' . "$first + $second = " . $sum . "<br>\n";
?>

